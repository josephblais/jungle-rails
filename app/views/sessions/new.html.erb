<container  class="text-center">
  <h1>Login</h1>

  <%= form_tag '/login' do %>

    <div class="form-group">
     Email:
     <br>
      <%= text_field_tag :email %>
    </div>

    <div class="form-group">
     Password:
     <br>
      <%= password_field_tag :password %>
   </div>
    <%= submit_tag "Login", class: 'btn btn-primary' %>

  <% end %>
</container>
  <h1 class=>Login</h1>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <%= form_tag '/login' do %>

        <div class="form-group">
          <label> Email </label>
          <%= text_field_tag :email, "", class: 'form-control' %>
      </div>

      <div class="form-group">
          <label> Password </label>
          <%= password_field_tag :password,"", class: 'form-control' %>
      </div>

        <%= submit_tag "Login", class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
